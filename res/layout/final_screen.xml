<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:padding="10dip"
	>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:layout_marginBottom="20dip"
		>
		<TextView  
			android:id="@+id/fs_gana_text"
		    android:layout_width="fill_parent" 
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:gravity="center_vertical|center_horizontal"
		    android:text="ganador"
		    android:textAppearance="@style/TextFinalScreen"
		    android:singleLine="true"
		    android:scrollHorizontally="true"
		    android:ellipsize="middle"
	    	/>
	    <ImageView
	    	android:id="@+id/fs_gana_img"
	    	android:layout_width="fill_parent" 
		    android:layout_height="fill_parent"
		    android:layout_weight="3"
		    android:gravity="center_vertical|center_horizontal"
		    android:src="@drawable/end_o"
		/>
	</LinearLayout>
	
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:layout_marginBottom="20dip"
		>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center"
			>
			<TextView
				android:id="@+id/fs_puntuacion_1_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Tu puntuación"
				android:textAppearance="@style/TextFinalScreen"
				/>
			<TextView
				android:id="@+id/fs_puntuacion_1"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:layout_gravity="center"
				android:minWidth="20dip"
				android:enabled="true"
				android:text="666"
				android:textColor="@android:color/primary_text_dark"
				android:background="@drawable/textfield_activated_holo_dark"
			/>
		</LinearLayout>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			>
			<TextView
				android:id="@+id/fs_puntuacion_2_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Mejor"
				android:textAppearance="@style/TextFinalScreen"
				/>
			<TextView
				android:id="@+id/fs_puntuacion_2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center"
				android:minWidth="20dip"
				android:enabled="true"
				android:text="1500"
				android:textColor="@android:color/primary_text_dark"
				android:background="@drawable/textfield_activated_holo_dark"
			/>
		</LinearLayout>
	</LinearLayout>
	
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:layout_marginBottom="20dip"
		android:gravity="left|center_vertical"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="20dip"
			android:gravity="left"
			android:textAppearance="@style/TextFinalScreen"
			android:text="Compartir:"
			/>
		<ImageButton
			android:id="@+id/fs_bt_twitter"
			android:background="#00000000"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="centerInside"
			android:maxHeight="30dip"
			android:adjustViewBounds="true"
			android:src="@drawable/ic_twitter"
			/>
	</LinearLayout>
	
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:gravity="center"
		>
		<LinearLayout 
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			>
			<Button
				android:id="@+id/fs_bt_nueva"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:text="Nueva partida"
			/>
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="3"
				>
				<Button
					android:id="@+id/fs_bt_volver"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:text="Volver"
					/>
				<Button
					android:id="@+id/fs_bt_menu"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:text="Menú"
					/>
		</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	
	
</LinearLayout>